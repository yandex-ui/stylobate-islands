skin-islands-tabs($this)
  margin: 0 -0.5*$islands_m

  if nowrap in $this.arguments
    white-space: nowrap

  if adaptive in $this.arguments
    font-size: 1em
  else if small in $this.arguments
    font-size: $islands_text_s
  else
    font-size: $islands_text_m

skin-islands-tabs__item($this)
  skin-islands-link($this)
  line-height: 2em
  padding: 3px 0.5*$islands_m

skin-islands-tabs__item_selected($this)
  skin-islands-link_selected($this)

  unless no-elements in $this.arguments
    &:before
      content: ""
      skin-islands-tabs__item_selected-helper($this)

skin-islands-tabs__item_selected-helper()
  kind: fill top -1px 0.5*$islands_m

  border-top: 2px solid
