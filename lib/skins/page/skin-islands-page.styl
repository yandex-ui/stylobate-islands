// Var for checking, fixing rem
$init_islands_root ?= false

skin-islands-page($this)
  reset('html') unless no-reset in $this.arguments

  font-size: 62.5%
  color: $islands_color_text
  background: $islands_bg_page

skin-islands-page-font()
  // Not in shorthand 'cause of IE 9&10 â€” http://dabblet.com/gist/7445329
  font-size: $islands_text_m
  line-height: round(unit(22px/$islands_text_m, ''), 3)
  font-family: Arial, sans-serif

skin-islands-check-font()
  unless $init_islands_root
    skin-islands-page-font()

skin-islands-page-body($this)
  reset('body') unless no-reset in $this.arguments
  skin-islands-page-font()

  background: transparent

  unless $init_islands_root
    $init_islands_root[0] = true

init_islands_root()
  html
    global_skin: islands-page

  body
    global_skin: islands-page-body

// Init if the var is set
if $init_islands_root
  init_islands_root()
