stylobate_defaults('skin-islands-pseudo-button',
  '_hover' '&:hover',
  '_focus' '&:focus')

skin-islands-pseudo-button($this)
  global_skin: islands-check-font

  position: relative

  $align = utilus_retrieve($this.params, middle top bottom, baseline)
  $align = middle if ie and $align == baseline
  vertical-align: $align

  color: $islands_color_text

  border-radius: 3px
  $border-alpha = $this.params.border-alpha or 0.2
  box-shadow: inset 0 0 0 1px rgba(#000, $border-alpha)

  if ie
    border: 1px solid #CBCBCB

  &:before
    content: ""
    kind: fill 1px
    border-radius: 2px

  // So it would overlay anything inside
  &:after
    content: ""
    kind: fill

  $selector = $this.strings[0] or $skin-islands-button-content
  & { $selector }
    kind: block

  if $this.params.small
    global_skin: islands-para2 no-margin
    if !ie
      padding: ($islands_xs - 3px) $islands_s
    else
      padding: ($islands_xs - 4px) ($islands_s - 1px)
  else
    global_skin: islands-para no-margin
    if !ie
      padding: ($islands_xs - 3px) ($islands_s + 1px)
    else
      padding: ($islands_xs - 4px) $islands_s

skin-islands-pseudo-button_hover($this)
  $border-alpha = $this.params.border-alpha ? $this.params.border-alpha + 0.15 : 0.35

  box-shadow: inset 0 0 0 1px rgba(#000, $border-alpha)

skin-islands-pseudo-button_focus($this)
  $border-alpha = $this.params.border-alpha ? $this.params.border-alpha + 0.15 : 0.35

  box-shadow: inset 0 0 0 1px rgba(#000, $border-alpha)

  global_skin: islands-button_focus


stylobate_defaults('skin-islands-pseudo-button_inverted',
  '_hover' '&:hover' _inverted,
  '_focus' '&:focus' _inverted)


skin-islands-pseudo-button_inverted($this)
  color: darken(invert($islands_color_text), 10%)

  $border-alpha = $this.params.border-alpha or 0.3
  box-shadow: inset 0 0 0 1px rgba(#FFF, $border-alpha)

  if ie
    border: 1px solid invert(#CBCBCB)


skin-islands-pseudo-button_inverted_hover($this)
  $border-alpha = $this.params.border-alpha ? $this.params.border-alpha + 0.2 : 0.5

  box-shadow: inset 0 0 0 1px rgba(#FFF, $border-alpha)

skin-islands-pseudo-button_inverted_focus($this)
  $border-alpha = $this.params.border-alpha ? $this.params.border-alpha + 0.2 : 0.5

  box-shadow: inset 0 0 0 1px rgba(#FFF, $border-alpha)
