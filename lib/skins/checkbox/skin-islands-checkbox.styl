skin-islands-checkbox($this)
  if !ie
    global_skin: islands-button no-active middle retrieve($this.params, sizeless, adaptive) (_hover '')

    text-align: center

  margin-right: $islands_xs

  unless ie
    stylobate_defaults($this,
      __icon '& > &-icon')

skin-islands-checkbox__icon()
  if !ie
    global_skin: islands-icon_check absolute

    // Find out if there is any way to make this easier?
    input:not(:checked) + &
      visibility: hidden
