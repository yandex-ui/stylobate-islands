skin-islands-menu($this)
  if padded in $this.arguments
    padding: 0.5*(small in $this.arguments ? $islands_xs : $islands_s) 0

skin-islands-menu__item($this)
  kind: block
  global_skin(islands-link $islands_color_text no-hover)

  user-select: none
  white-space: nowrap

  if ellipsis in $this.arguments
    kind: ellipsis

  unless utilus_get($this.arguments, '_size')
    skin-islands-menu__item_size($this)

  unless no-hover in $this.arguments or utilus_get($this.arguments, '_hover')
    &:hover
      skin-islands-menu__item_hover($this)

skin-islands-menu__item_size($this)
  if small in $this.arguments
    global_skin(islands-para2 no-margin)
    padding: 0.5*$islands_xs $islands_s
  else
    global_skin(islands-para no-margin)
    padding: 0.5*$islands_s $islands_m

skin-islands-menu__item_hover()
  background: $islands_color_selected

skin-islands-menu__item_checked($this)
  unless utilus_get($this.arguments, '-helper')
    &:after
      content: ""
      skin-islands-menu__item_checked__helper()

skin-islands-menu__item_checked__helper()
  global_skin: islands-icon_check
  margin: -1*$islands_s 0 0 $islands_s


skin-islands-menu__group($this)
  display: block

  & + &
    box-shadow: 0 -1px rgba(#000, 0.2)

    if padded in $this.arguments
      margin-top: 0.5*(small in arguments ? $islands_xs : $islands_s)
      padding-top: 0.5*(small in arguments ? $islands_xs : $islands_s)

skin-islands-menu__separator($this)
  display: block
  border-top: 1px solid rgba-ie(#000, 0.2)

  if padded in $this.arguments
    margin-top: 0.5*(small in arguments ? $islands_xs : $islands_s)
    margin-bottom: 0.5*(small in arguments ? $islands_xs : $islands_s)
