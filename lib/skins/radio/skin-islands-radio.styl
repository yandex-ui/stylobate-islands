skin-islands-radio($this)
  if !ie
    global_skin(islands-button no-active middle retrieve($this.arguments, sizeless, adaptive) (_hover ''))

    text-align: center

    border-radius: 50%

  margin-right: $islands_xs

  if !ie
    &:before
      border-radius: 50%

  unless ie
    stylobate_defaults($this,
      __icon '& > &-icon')

skin-islands-radio__icon()
  if !ie
    // Replace it with svg?
    // And icon kind?
    position: absolute
    top: 50%
    left: 50%

    width: 6px
    height: 6px
    margin: -3px

    background: #000
    border-radius: 50%

    // Find out if there is any way to make this easier?
    input:not(:checked) + &
      visibility: hidden
