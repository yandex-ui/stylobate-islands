skin-islands-icon()
  if with-hover in arguments
    @extends $skin-islands-icon_with-hover

skin-islands-icon_remove()
  @extends $skin-islands-icon_remove

$skin-islands-icon_remove
  kind: icon (size 16px 16px) "data:image/svg+xml;base64,"

skin-islands-icon_notification()
  @extends $skin-islands-icon_notification

$skin-islands-icon_notification
  kind: icon

  height: 15px
  min-width: 9px
  padding: 0 3px
  border: 2px solid #FFF

  text-align: center

  font-size: 13px
  line-height: 15px
  font-weight: bold

  color: #FFF
  background: #F00
  border-radius: 1em

  box-shadow: 0 1px 0 1px rgba(#000, 0.1),
              0 5px 10px -5px rgba(#000, 0.5)

skin-islands-icon_dropdown()
  skin(icon_arrow arguments)

  if selecty in arguments
    float: right

    if small in arguments
      top: 0.58em
    else
      top: 0.7em

    left: -4px
    margin-right: -1*$islands_xs
    margin-left: $islands_s

skin-islands-icon_arrow()
  @extends $skin-islands-icon_arrow

  $size = utilus_alike(arguments, 6px)
  kind: icon (size $size)

  $color = utilus_get_color(arguments, inherit)
  unless $color == inherit
    color: $color

  $angle = 45deg
  if top in arguments
    $angle = -135deg

  else if right in arguments
    $angle = -45deg

  else if left in arguments
    $angle = 135deg

  transform: scale(0.75) rotate($angle)

$skin-islands-icon_arrow
  border-bottom: 2px solid
  border-right: 2px solid
  margin-top: -0.33em


skin-islands-icon_check()
  if absolute in arguments
    position: absolute
    top: 50%
    left: 50%
  else
    kind: icon

  width: 5px
  height: 13px
  border-bottom: 3px solid
  border-right: 3px solid
  margin: -13px 0 0 -2px

  color: #000

  transform: scale(0.9) rotate(50deg) skewX(12deg)

$skin-islands-icon_with-hover
  cursor: pointer
  opacity: 0.2

  &:hover
    opacity: 1
